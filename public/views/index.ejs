<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/public/styles.css">
    <!-- Add Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div class="content">
        <div id="navbarContainer">
            <nav id="navbar">
                <div id="navbarIMGContainer">
                    <img src="/public/images/ApinorLogo.png" alt="ApinorLogo">
                </div>
                <div id="navbarButtons">
                    <button id="aboutUs" class="navbarButton">OM APINOR</button>
                    <button id="order" class="navbarButton">BESTILLING</button>
                    <button id="contact" class="navbarButton">KONTAKT</button>
                </div>
            </nav>
            <div id="dropdown" class="relative inline-block text-left">
              <button onclick="toggleDropdown()">☰</button>
              <div
                id="dropdownMenu"

              >
                <ul class="py-1">
                  <li>
                    <a
                      href="/om-apinor"
                      class="block px-4 py-2 text-base text-gray-800 hover:bg-gray-100 hover:text-gray-900"
                    >
                      OM APINOR
                    </a>
                  </li>
                  <li>
                    <a
                      href="/bestilling"
                      class="block px-4 py-2 text-base text-gray-800 hover:bg-gray-100 hover:text-gray-900"
                    >
                      BESTILLING
                    </a>
                  </li>
                  <li>
                    <a
                      href="/kontakt"
                      class="block px-4 py-2 text-base text-gray-800 hover:bg-gray-100 hover:text-gray-900"
                    >
                      KONTAKT
                    </a>
                  </li>
                </ul>
              </div>
            </div>
        </div>
        <div id="navbarLine"></div>
        <img src="/public/images/ApinorBanner.jpg" alt="Banner" id="apiBanner">

        <div style="justify-content: center; display: flex;">
                  <!-- News Carousel Section -->
            <div class="carousel">
              <% newsCarousel.forEach(function(news) { %>
                  <div class="carousel-item">
                      <%= news %>
                  </div>
              <% }); %>
          </div>
        </div>

      <div style="justify-content: center; display: flex;">
              <!-- Shop Section -->
          <section class="shop">
            <h1><%= shopTopText %></h1>
            
            <div class="shop-items">
                <% shopItems.forEach(function(item) { %> 
                    <div class="shop-item">
                        <img src="<%= item.image %>" alt="<%= item.title %>">
                        <span class="price"><%= item.price %></span>
                        <h3><%= item.title %></h3>
                        <p><%= item.description %></p>
                        <button type="button" class="btn btn-primary">Kjøp nå</button>
                    </div>
                <% }); %>
            </div>
        </section>
      </div>

      <div style="justify-content: center; display: flex;">
        <!-- News Section -->
        <section class="news" style="width: 85%;">
          <h2>Nyheter</h2>
          <% news.forEach(function(article) { %>
              <article>
                  <h3><%= article.title %></h3>
                  <time><%= article.date %></time>
                  <p><%= article.content %></p>
              </article>
          <% }); %>
        </section>
      </div>
    </div>

    <!-- Footer -->
    <footer class="d-flex flex-wrap justify-content-between border-top py-3" style="width: 90%; align-items: center; margin: 0 auto;">
      <div class="col-md-4 d-flex align-items-center justify-content-start">
          <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
              <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
          </a>
          <span class=""><%= footer.companyInfo %></span>
      </div>
      <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
          <li class="ms-3"><a href="#"><img src="/public/images/webIcons/facebook-svgrepo-com.svg" alt="Facebook" class="social-icon"></a></li>
          <li class="ms-3"><a href="#"><img src="/public/images/webIcons/XLogo.svg" alt="X.com" class="social-icon"></a></li>
          <li class="ms-3"><a href="#"><img src="/public/images/webIcons/instagram-svgrepo-com.svg" alt="Instagram" class="social-icon"></a></li>
          <li class="ms-3"><a href="#"><img src="/public/images/webIcons/youtube-svgrepo-com.svg" alt="YouTube" class="social-icon"></a></li>
      </ul>
  </footer>

    <!-- Add Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
      function toggleDropdown() {
        const menu = document.getElementById('dropdownMenu');
        if (menu.style.display === 'block') {
          menu.style.display = 'none';
        } else {
          menu.style.display = 'block';
        }
      }
    </script>
</body>
</html>