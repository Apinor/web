    </nav>
  </div> -->
  <div id="newsCarusellContainer">
    <% if (newsCarousel && newsCarousel.length) { %>
      <% newsCarousel.forEach((item) => { %>
        <div class="carousel-item"><%= item %></div>
      <% }) %>
    <% } %>
  </div>
  <div id="shopTopTextContainer">
    <h1><%= shopTopText || 'VELKOMMEN TIL APINOR.NO - NETTBUTIKKEN FOR BIRÃ˜KTERE' %></h1>
  </div>
  <div id="shopFrontContainer">
    <% if (shopItems && shopItems.length) { %>
      <% shopItems.forEach((item) => { %>
        <div class="shop-item">
          <h2><%= item.title %></h2>
          <p><%= item.description %></p>
          <span><%= item.price %></span>
        </div>
      <% }) %>
    <% } %>
  </div>
  <div id="newsContainer">
    <% if (news && news.length) { %>
      <% news.forEach((article) => { %>
        <div class="news-article">
          <h3><%= article.title %></h3>
          <p><%= article.content %></p>
        </div>
      <% }) %>
    <% } %>
  </div>
  <div id="footerContainer">
    <%= footer || '' %>
  </div>
</body>
</html>
